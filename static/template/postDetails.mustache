<a href="#" id="close-detail-trigger" class="trigger trigger-icon" title="Hide" />
  <div>
  Created on {{created_on_readable}} by {{#user}}{{name}}{{/user}}
  </div>

  <div>
    <a href="{{#user}}{{permalink}}{{/user}}">Go to 
    the full profile of
    <span class="username">@{{#user}}{{username}}{{/user}}</span></a>
  </div>

  <div>
    <a href="{{permalink}}" id="zoom-trigger" class="trigger trigger-icon" title="Zoom" />
    {{#user}}
      {{#doesNotFollow}}
        <a href="#" class="trigger-icon follow-trigger" title="Follow" data-id="{{id}}" />
      {{/doesNotFollow}}
      {{#doesFollow}}
        <a href="#" class="trigger-icon unfollow-trigger" title="Unfollow" data-id="{{id}}" />
      {{/doesFollow}}
    {{/user}}
  </div>

</div>
